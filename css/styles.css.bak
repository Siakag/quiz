/*************************rules***************************/
.hide {
  display: none;
}




/*************************content***************************/
#content {
  background: none repeat scroll 0 0 #000000;
  color: #FFFFFF;
  min-height: 50%;
  min-width: 50%;
  padding: 10%;
  text-align: left;
}



/*************************form elements***************************/
input[type="radio"] {
  margin: 2% 1% 1% 0;
}

input[type="submit"] {
  background: none repeat scroll 0 0 #FFFAF0;
  border: medium none;
  color: #000000;
  margin: 1% 0;
  outline: medium none;
  padding: 0.5%;
  text-transform: uppercase;
}